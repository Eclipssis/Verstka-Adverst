%section.middle.container
  %ol.breadcrumb.col-lg-3.col-md-3.col-sm-3.col-xs-12
    %li
      %a{:href => "#"} Главная
    %li.active Вход
  .sign-in.col-lg-6.col-md-6.col-sm-8.col-xs-12.col-lg-offset-3.col-md-offset-3.col-sm-offset-2
    = form_for(resource, as: resource_name, url: session_path(resource_name),html: {class: "form-horizontal",role: 'form'}) do |f|
      .form-group
        %label.col-sm-2.control-label{:for => "inputEmail3"} Email
        .col-sm-10
          = f.email_field :email, autofocus: true,class: 'form-control', id: 'inputEmail3', placeholder: 'Email'
      .form-group
        %label.col-sm-2.control-label{:for => "inputPassword3"} Пароль
        .col-sm-10
          = f.password_field :password, autocomplete: "off", class: 'form-control', plaseholder: 'Password', type: 'password'
      .form-group
        .col-sm-offset-2.col-sm-10
          .checkbox
          - if devise_mapping.rememberable?
            = f.check_box :remember_me
            = f.label :remember_me
      .form-group
        .col-sm-offset-2.col-sm-10
          = f.submit :Войти
      .form-group
        .col-sm-offset-2.col-sm-10
          = render "devise/shared/links"